# Application
PORT=3000

# Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=aam_admin
POSTGRES_PASSWORD=aam_admin_secret
POSTGRES_DB=aam_admin

# GitHub Actions OIDC
# The audience claim expected in the GitHub OIDC token (must match workflow's `aud`)
GITHUB_OIDC_AUDIENCE=https://admin.aam-digital.app
# The GitHub repository allowed to authenticate (e.g. Aam-Digital/ndb-setup)
GITHUB_REPOSITORY=Aam-Digital/aam-cloud-infrastructure

# Sentry
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Brevo Webhook
BREVO_WEBHOOK_TOKEN=change-me-in-production
# Comma-separated list of Brevo IP ranges (CIDR notation)
BREVO_ALLOWED_IPS=1.179.112.0/20
